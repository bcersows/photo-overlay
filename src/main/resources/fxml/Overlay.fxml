<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>


<Pane styleClass="bg-transparent" stylesheets="@../style/application.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane fx:id="rootContent" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="200.0" minWidth="400.0" styleClass="bg-transparent">
         <center>
            <VBox fx:id="imageArea" alignment="CENTER" styleClass="bg-transparent" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="labelNoImages" text="No images found for configured folder path!" />
                  <ImageView fx:id="imageView" fitHeight="200.0" fitWidth="200.0" onMouseClicked="#onMouseClickedOnImageView" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
         </center>
         <top>
            <HBox prefHeight="20.0" spacing="10.0" styleClass="bg-transparent" BorderPane.alignment="CENTER">
               <children>
                  <HBox fx:id="dragBar" alignment="CENTER" onMouseDragged="#onMouseDraggedEvent" onMousePressed="#onMousePressedEvent" styleClass="drag-area" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="dragBarText" text="\\uf0b2">
                           <styleClass>
                              <String fx:value="fontAwesome" />
                              <String fx:value="text-normal" />
                           </styleClass>
                        </Label>
                     </children>
                     <cursor>
                        <Cursor fx:constant="MOVE" />
                     </cursor>
                  </HBox>
                  <Button fx:id="buttonSettings" mnemonicParsing="false" onAction="#onActionButtonSettings" text="SETTINGS" />
                  <Button fx:id="buttonClose" mnemonicParsing="false" onAction="#onActionButtonClose" text="CLOSE" />
               </children>
            </HBox>
         </top>
         <effect>
            <DropShadow color="#0000007f" offsetX="10.0" offsetY="10.0" />
         </effect>
         <opaqueInsets>
            <Insets bottom="15.0" right="15.0" />
         </opaqueInsets>
      </BorderPane>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="20.0" right="20.0" />
   </padding>
</Pane>
